<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_row_thin"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/order_row_status_tv"
        style="@style/SmallSubTextStyle"
        android:layout_width="@dimen/order_list_row_status_width"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/order_row_orders_tv"
        style="@style/SmallSubTextStyle"
        android:layout_width="@dimen/order_list_row_orders_width"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/order_row_size_tv"
        style="@style/SmallSubTextStyle"
        android:layout_width="@dimen/order_list_row_size_width"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/order_row_price_tv"
        style="@style/SmallSubTextStyle"
        android:layout_width="@dimen/order_list_row_price_width"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>